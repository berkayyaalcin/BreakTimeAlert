        <Label Name="MainLabel" Content="Dinlen!" FontSize="90" Foreground="White"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Çıkış: ESC          Ayarlar: F1" FontSize="15" Foreground="White"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Grid.ColumnSpan="4"/>
    </Grid>
</Window>
